#include <iostream>
using namespace std;

int main()
{
	int nilai[2];
	nilai[0];
	nilai[1];
	nilai[2];
	nilai[3];
	
	cout << "nilai[0] : ";
	cin >> nilai[0];
	cout << "nilai[1] : ";
	cin >> nilai[1];
	cout << "nilai[2] : ";
	cin >> nilai[2];
	cout << "nilai[3] : ";
	cin >> nilai[3];
	
	cout << "----------------------------" << endl;
	cout << "nilai[0] : " << nilai[0] << endl;
	cout << "nilai[1] : " << nilai[1] << endl;
	cout << "nilai[2] : " << nilai[2] << endl;
	cout << "nilai[3] : " << nilai[3] << endl;
}
